# Camera Settings
# ============================================

# Camera type: RPI or USB
CAMERA_TYPE="__CAMERA_TYPE__"

# For RPi cameras: camera index (0, 1, etc.)
CAMERA_ID="__CAMERA_ID__"

# For USB cameras: device path (e.g., /dev/video0)
CAMERA_DEVICE="__CAMERA_DEVICE__"

# Camera name (for display purposes)
CAMERA_NAME="__CAMERA_NAME__"

# ============================================
# Prusa Connect API Settings
# ============================================

# Your unique camera fingerprint (UUID)
FINGERPRINT="__FINGERPRINT__"

# Camera token from Prusa Connect
# Get this from: connect.prusa3d.com -> Your Printer -> Camera -> Add Camera
TOKEN="__TOKEN__"

# ============================================
# Capture Settings (for Prusa Connect uploads)
# ============================================

# Capture resolution (width x height)
CAPTURE_WIDTH=1920
CAPTURE_HEIGHT=1080

# Upload interval in seconds
UPLOAD_INTERVAL=10

# ============================================
# Stream Settings (for local web viewer)
# ============================================

# Stream server port
STREAM_PORT=8080

# Stream resolution (lower than capture for performance)
STREAM_WIDTH=1280
STREAM_HEIGHT=720
